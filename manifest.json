{
    "manifest_version": 3,
    "name": "Amazon Receipt Downloader",
    "version": "1.0",
    "permissions": [
        "downloads",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon":{
            "48": "icon48.png"
        }
    }
}
